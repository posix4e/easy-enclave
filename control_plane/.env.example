# Control plane environment (copy to control_plane/.env and fill in)

# Core auth
EE_ADMIN_TOKEN=
EE_GITHUB_TOKEN=
EE_LAUNCHER_TOKEN=
EE_UPTIME_TOKEN=

# Storage
EE_DB_PATH=/var/lib/easy-enclave/control-plane.db

# Attestation
EE_ALLOWLIST_ASSET=agent-attestation-allowlist.json
EE_PCCS_URL=

# Timing
EE_ATTEST_INTERVAL_SEC=3600
EE_ATTEST_DEADLINE_SEC=30
EE_HEALTH_TIMEOUT_SEC=120

# Registration
EE_REGISTRATION_TTL_DAYS=30
EE_REGISTRATION_WARN_DAYS=3

# DNS auto-update (Cloudflare)
EE_DNS_UPDATE_ON_START=false
EE_DNS_AUTO_IP=false
EE_DNS_IP=
EE_DNS_IPV6=
EE_DNS_PROXIED=true
EE_DNS_TTL=1
EE_DNS_HOSTS=
EE_DNS_CONTROL_HOST=control
EE_DNS_CONTROL_DIRECT_HOST=control-direct
EE_DNS_APP_WILDCARD=*.app

# RA-TLS (mutual) for control-plane WS
EE_RATLS_ENABLED=true
EE_RATLS_CERT_TTL_SEC=3600
EE_RATLS_REQUIRE_CLIENT_CERT=true
EE_RATLS_SKIP_PCCS=false
CLOUDFLARE_API_TOKEN=
CLOUDFLARE_ZONE=
CLOUDFLARE_ZONE_ID=
